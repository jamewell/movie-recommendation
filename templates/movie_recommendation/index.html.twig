{% extends 'base.html.twig' %}

{% block title %}Movie Recommendation{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Movie Recommendation</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {% if movies is empty %}
        <p class="text-muted">No movie recommendations</p>
    {% else %}
        <div class="row">
            {% for movie in movies %}
                <div class="col-md-4">
                    <div class="card p-3 my-2 shadow-sm">
                        <img
                            src="{{ 'https://image.tmdb.org/t/p/w500/' ~ movie.posterPath }}"
                            alt="Movie Poster"
                            class="mb-3"
                            width="auto"
                            height="auto"
                        >
                        <h4>{{ movie.title }}</h4>
                        <p class="text-muted">{{ movie.releaseDate|date('Y') }}</p>
                        <p>{{ movie.overview }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

{% endblock %}
